<%- include('./partials/header') %>

<% cartWithImages.forEach(function (item) { %>
<div class="flex flex-col md:flex-row gap-10 items-start justify-center min-h-screen bg-gray-50 p-8">
  <!-- Image & Product Info -->
  <section class="w-full max-w-md bg-white rounded-2xl shadow-2xl overflow-hidden flex flex-col">
    <div class="h-80 flex items-center justify-center bg-gray-100">
      <img src="data:image/jpeg;base64,<%= item.image %>" class="object-contain h-full w-full transition-transform duration-300 hover:scale-105" />
    </div>
    <div class="flex justify-between items-center px-6 py-4 bg-blue-50">
      <h3 class="text-2xl font-semibold text-gray-800"><%= item.name %></h3>
      <div class="flex items-center gap-2">
        <button class="w-9 h-9 flex items-center justify-center rounded-full bg-white hover:bg-blue-200 text-blue-600 shadow transition"><i class="ri-add-line"></i></button>
        <span class="px-2 py-1 rounded bg-gray-100 text-lg font-bold text-gray-700">01</span>
        <button class="w-9 h-9 flex items-center justify-center rounded-full bg-white hover:bg-blue-200 text-blue-600 shadow transition"><i class="ri-subtract-line"></i></button>
      </div>
    </div>
    <div class="flex items-center justify-between px-6 py-3 bg-blue-600 text-white rounded-b-2xl text-lg">
      <span>Net Total</span>
      <span class="font-bold text-2xl">₹ <%= bill %></span>
    </div>
  </section>

  <!-- Price breakdown -->
  <section class="w-full max-w-lg bg-white rounded-2xl shadow-2xl p-10 flex flex-col gap-4">
    <h3 class="text-xl font-bold mb-4 text-gray-800">Price Breakdown</h3>
    <div class="flex justify-between border-b pb-3"><span>Total MRP</span><span>₹ <%= item.price %></span></div>
    <div class="flex justify-between border-b pb-3"><span>Discount</span><span class="text-green-600">- ₹ <%= Number(item.discount) %></span></div>
    <div class="flex justify-between border-b pb-3"><span>Platform Fee</span><span>₹ 20</span></div>
    <div class="flex justify-between border-b pb-3"><span>Shipping</span><span class="text-green-700 font-medium">FREE</span></div>
    <hr class="my-3"/>
    <div class="flex items-center justify-between text-xl font-bold">
      <span class="">Total Amount</span>
      <span class="text-blue-700">₹ <%= bill %></span>
    </div>
   <div class="mt-8 flex gap-3">

  <!-- Remove item -->
  <a href="/remove/<%= item._id %>" class="flex-1">
    <button class="w-full py-3 rounded-lg bg-red-500 text-white font-semibold shadow hover:bg-red-600 transition-all">
      Remove
    </button>
  </a>
</div>
  </section>
</div>
<% }) %>

<%- include('./partials/footer') %>