<%- include('./partials/header') %>

<% if(success && success.length>0){ %>
<div class="fixed top-4 left-1/2 -translate-x-1/2 z-50 p-4 bg-green-500 text-white rounded-xl shadow-lg animate-fadein">
  <%= success %>
</div>
<% } %>

<div class="flex min-h-screen bg-gray-50">
  <!-- Sidebar navigation -->
  <aside class="hidden md:flex w-64 flex-col justify-between bg-white shadow-lg px-6 py-10">
    <div>
      <h2 class="mb-6 text-2xl font-bold tracking-tight text-blue-800">Admin</h2>
      <nav class="flex flex-col gap-4">
        <a href="/owners/admin" class="px-4 py-2 rounded-md hover:bg-blue-50 transition">Create Products</a>
      </nav>
    </div>
    <a href="/shop" class="text-blue-500 hover:underline">View Shop</a>
  </aside>

  <!-- Form section -->
  <main class="flex-1 flex flex-col items-center justify-center px-4 py-8">
    <div class="w-full max-w-xl bg-white shadow-2xl rounded-2xl p-10 border-t-4 border-blue-600">
      <h1 class="text-3xl font-semibold mb-6 text-blue-900">Create New Product</h1>
      <form action="/products/create" method="post" enctype="multipart/form-data" class="space-y-8">
        <section>
          <h2 class="text-lg font-bold mb-4 text-gray-700">Product Details</h2>
          <div class="mb-5">
            <label class="block mb-2 font-semibold text-gray-700">Product Image</label>
            <input name="image" type="file" class="block w-full border-2 border-gray-200 focus:border-blue-400 rounded-lg bg-gray-50 px-5 py-3" />
            <span class="text-sm text-gray-400">PNG/JPG only. Max 1MB.</span>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
            <input name="name" type="text" placeholder="Product Name" class="border-2 border-gray-200 focus:border-blue-400 rounded-lg bg-gray-50 px-5 py-3 w-full" required />
            <input name="price" type="number" placeholder="Price (₹)" step="0.01" class="border-2 border-gray-200 focus:border-blue-400 rounded-lg bg-gray-50 px-5 py-3 w-full" required />
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-5 mt-4">
            <input name="discount" type="number" placeholder="Discount (₹)" class="border-2 border-gray-200 focus:border-blue-400 rounded-lg bg-gray-50 px-5 py-3 w-full" />
          </div>
        </section>
        <section>
          <h2 class="text-lg font-bold mb-4 text-gray-700">Panel Details</h2>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-5">
            <input name="bgcolor" type="text" placeholder="Background color (e.g., #fff or blue-50)" class="border-2 border-gray-200 focus:border-blue-400 rounded-lg bg-gray-50 px-5 py-3 w-full" />
            <input name="panelcolor" type="text" placeholder="Panel color" class="border-2 border-gray-200 focus:border-blue-400 rounded-lg bg-gray-50 px-5 py-3 w-full" />
            <input name="textcolor" type="text" placeholder="Text color" class="border-2 border-gray-200 focus:border-blue-400 rounded-lg bg-gray-50 px-5 py-3 w-full" />
          </div>
        </section>
        <div class="flex justify-end">
          <button type="submit" class="px-8 py-3 rounded-lg text-white text-lg font-bold bg-blue-600 shadow hover:bg-blue-700 hover:scale-105 active:scale-98 focus:outline focus:ring-2 focus:ring-blue-300 transition-all">Create Product</button>
        </div>
      </form>
    </div>
  </main>
</div>

<%- include('./partials/footer') %>